<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.androidchoi.jobdam.ArticleFragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/board_article"
        android:layout_marginTop="@dimen/default_small_dimen"
        android:layout_marginBottom="@dimen/default_small_dimen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 내기분은?"
            android:id="@+id/textView11"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="88dp"
            android:textSize="@dimen/font_size_min"/>

        <TextView
            android:id="@+id/text_article"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:scrollbars="vertical"
            android:textColor="@android:color/black"
            android:paddingLeft="@dimen/default_dimen"
            android:paddingRight="@dimen/default_dimen"
            android:layout_above="@+id/layout_article_like"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView30"/>

        <LinearLayout
            android:id="@+id/layout_article_like"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/default_small_dimen">

            <!--<ToggleButton-->
                <!--android:id="@+id/image_like_button"-->
                <!--android:layout_width="25dp"-->
                <!--android:layout_height="17dp"-->
                <!--android:background="@drawable/selector_button_article_like"-->
                <!--android:checked="false"-->
                <!--android:padding="50dp"-->
                <!--android:text=""-->
                <!--android:textOff=""-->
                <!--android:textOn="">-->
            <!--</ToggleButton>-->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="17dp"
                android:id="@+id/image_like_button"
                android:background="@drawable/selector_button_article_like"
                />


            <TextView
                android:id="@+id/text_like_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_small_dimen"
                android:text="New Text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_title"/>
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView30"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/default_small_dimen"
            android:background="@color/colorPrimary"
            android:src="@drawable/emotion_smile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="후련해요"
            android:id="@+id/textView30"
            android:layout_below="@+id/imageView30"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"/>

    </RelativeLayout>


</FrameLayout>
