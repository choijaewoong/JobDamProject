<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="40dp"
    >

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/image_card_category_color"
        android:background="@drawable/image_category_default"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/default_large_dimen"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메모"
        android:id="@+id/text_category_item_title"
        android:textSize="@dimen/font_size_semi_large"
        android:layout_alignBottom="@+id/image_card_category_color"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>