<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.androidchoi.jobdam.LogIn.ServiceAgreementFragment"
              android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_service_agreement"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/agreement"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_title"/>
    </android.support.v7.widget.Toolbar>
    <View
        android:id="@+id/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_depth"
        android:layout_gravity="center"
        android:background="@drawable/shadow_bottom"
        android:layout_below="@+id/toolbar_service_agreement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar_service_agreement"
        android:layout_above="@+id/btn_next_level"
        android:paddingLeft="@dimen/default_large_dimen"
        android:paddingTop="@dimen/default_large_dimen"
        android:paddingRight="@dimen/default_large_dimen"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서비스이용약관"
            android:id="@+id/textView27"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_large"
            android:layout_marginTop="@dimen/default_small_dimen"
            android:layout_marginBottom="@dimen/default_small_dimen"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text_user_agreement"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:lineSpacingExtra="@dimen/default_small_dimen"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_small"/>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_small_dimen"
            android:layout_marginBottom="@dimen/default_small_dimen">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/user_agreement_check"
                android:id="@+id/textView13"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_default"
                />

            <CheckBox
                android:layout_width="@dimen/default_large_dimen"
                android:layout_height="@dimen/default_large_dimen"
                android:id="@+id/checkBox_user_agreement"
                android:checked="false"
                android:button="@drawable/selector_check_toggle"
                android:visibility="visible"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:id="@+id/imageView6"
            android:background="@color/colorDivider"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 취급방침"
            android:id="@+id/textView28"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_large"
            android:layout_marginTop="@dimen/default_small_dimen"
            android:layout_marginBottom="@dimen/default_small_dimen"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lineSpacingExtra="@dimen/default_small_dimen"
            android:id="@+id/text_private_info"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_small"/>
        </ScrollView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_small_dimen"
            android:layout_marginBottom="@dimen/default_small_dimen">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/user_agreement_check"
                android:id="@+id/textView14"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_default"
                />

            <CheckBox
                android:layout_width="@dimen/default_large_dimen"
                android:layout_height="@dimen/default_large_dimen"
                android:id="@+id/checkBox_private_info"
                android:checked="false"
                android:button="@drawable/selector_check_toggle"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:id="@+id/imageView37"
            android:background="@color/colorDivider"/>

    </LinearLayout>

    <Button
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:text="동의하고 다음 단계로 이동"
    android:id="@+id/btn_next_level"
    android:layout_gravity="left|center_vertical"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/button_detail_page"
    android:layout_marginTop="@dimen/default_dimen"
    android:layout_marginBottom="@dimen/default_dimen"
    android:textColor="@android:color/white"/>

</RelativeLayout>
