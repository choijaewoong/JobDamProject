<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.dongja94.sampleslidingmenu.MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--@dimen/item_height-->

    <ListView
        android:id="@+id/listview_card"
        android:listSelector="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"/>

    <com.example.androidchoi.jobdam.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView_tag"
        android:fillViewport="false"
        android:clipToPadding="false"
        android:focusable="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/search_view_height"
        android:visibility="gone">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:padding="@dimen/default_small_dimen"
            >
            <com.example.androidchoi.jobdam.PredicateLayout
                android:id="@+id/predicateLayout_all_tag_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="30dp"
                >
            </com.example.androidchoi.jobdam.PredicateLayout>
            <ImageView
                android:layout_width="@dimen/default_large_dimen"
                android:layout_height="@dimen/default_large_dimen"
                android:id="@+id/image_tag_box_close_button"
                android:layout_gravity="right|top"
                android:background="@color/colorPrimary"/>
        </FrameLayout>
    </com.example.androidchoi.jobdam.MyScrollView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|bottom"
        app:menu_animationDelayPerItem="50"
        app:menu_backgroundColor="@color/colorBackgroundBlur"
        app:menu_buttonSpacing="0dp"
        app:menu_colorNormal="#0db5f7"
        app:menu_colorPressed="#1594c6"
        app:menu_colorRipple="#99FFFFFF"
        app:menu_fab_size="normal"
        app:menu_icon="@drawable/fab_add"
        app:menu_openDirection="up"
        app:menu_showShadow="true"
        app:menu_labels_colorNormal="@android:color/transparent"
        app:menu_labels_colorPressed="@android:color/transparent"
        app:menu_labels_colorRipple="@android:color/transparent"
        app:menu_labels_cornerRadius="3dp"
        app:menu_labels_ellipsize="none"
        app:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        app:menu_labels_margin="0dp"
        app:menu_labels_maxLines="-1"
        app:menu_labels_position="left"
        app:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        app:menu_labels_showShadow="false"
        app:menu_labels_singleLine="false"
        app:menu_labels_textColor="#FFFFFF"
        app:menu_labels_textSize="14sp"
        android:paddingRight="@dimen/default_small_dimen"
        android:paddingBottom="@dimen/default_small_dimen"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">
        <!--app:menu_shadowColor="#66000000"-->
        <!--app:menu_shadowRadius="4dp"-->
        <!--app:menu_shadowXOffset="1dp"-->
        <!--app:menu_shadowYOffset="3dp"-->
        <!--app:menu_labels_colorNormal="#ffffff"-->
        <!--app:menu_labels_colorPressed="#444444"-->
        <!--app:menu_labels_colorRipple="#66FFFFFF"-->
        <!--app:menu_labels_cornerRadius="3dp"-->
        <!--app:menu_labels_ellipsize="none"-->
        <!--app:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"-->
        <!--app:menu_labels_margin="0dp"-->
        <!--app:menu_labels_maxLines="-1"-->
        <!--app:menu_labels_position="left"-->
        <!--app:menu_labels_showAnimation="@anim/fab_slide_in_from_right"-->
        <!--app:menu_labels_showShadow="true"-->
        <!--app:menu_labels_singleLine="false"-->
        <!--app:menu_labels_textColor="#FFFFFF"-->
        <!--app:menu_labels_textSize="14sp"-->
        <!--app:menu_fab_label="your_label_here"-->
        <!--android:layout_marginBottom="@dimen/fab_margin"-->
        <!--android:layout_marginRight="@dimen/fab_margin"-->

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_add_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="#ffffff"
            app:fab_colorPressed="#bcbcbc"
            app:fab_colorRipple="#99FFFFFF"
            app:fab_label="@string/add_cartegory"
            app:fab_size="mini"
            android:src="@drawable/floating_button_add_category"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_write_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="#ffffff"
            app:fab_colorPressed="#bcbcbc"
            app:fab_colorRipple="#99FFFFFF"
            app:fab_label="@string/write_card"
            app:fab_size="mini"
            android:src="@drawable/floating_button_write"/>

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>
