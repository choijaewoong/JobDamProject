<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:paddingBottom="@dimen/default_dimen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="content"
        android:id="@+id/text_expandable_period_dday"
        android:textSize="@dimen/font_size_default"
        android:layout_marginRight="@dimen/default_large_dimen"
        android:textColor="@android:color/black"
        android:layout_marginLeft="@dimen/default_large_dimen"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_expandable_period_dday"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/default_large_dimen"
        android:id="@+id/linearLayout3"
        android:paddingTop="@dimen/default_small_dimen"
        android:paddingBottom="@dimen/default_small_dimen"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView28"
            android:layout_below="@+id/text_expandable_period_dday"
            android:layout_alignLeft="@+id/text_expandable_period_dday"
            android:layout_alignStart="@+id/text_expandable_period_dday"
            android:src="@drawable/image_job_detail_start"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/text_expandable_period_start"
            android:layout_alignTop="@+id/imageView28"
            android:layout_toRightOf="@+id/imageView28"
            android:layout_toEndOf="@+id/imageView28"
            android:layout_marginLeft="@dimen/default_small_dimen"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_default"
            android:layout_marginTop="-2dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/default_large_dimen"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView29"
            android:layout_below="@+id/imageView28"
            android:layout_alignLeft="@+id/imageView28"
            android:layout_alignStart="@+id/imageView28"
            android:src="@drawable/image_job_detail_end"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/text_expandable_period_end"
            android:layout_below="@+id/imageView28"
            android:layout_toRightOf="@+id/imageView29"
            android:layout_toEndOf="@+id/imageView29"
            android:layout_marginLeft="@dimen/default_small_dimen"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_default"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-2dp"/>
    </LinearLayout>

</RelativeLayout>