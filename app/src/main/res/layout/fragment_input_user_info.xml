<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.example.androidchoi.jobdam.LogIn.InputUserInfoFragment"
              android:background="@android:color/white">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_input_user_info"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/input_info"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_title"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="left|top"
        android:layout_weight="1"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:src="@drawable/m_image_icon"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/default_small_dimen"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:layout_gravity="right|bottom"
            android:src="@drawable/m_camera_icon"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_alignRight="@+id/imageView8"
            android:layout_alignEnd="@+id/imageView8"/>


    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="@dimen/login_layout_padding">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_signup_name"
            android:layout_gravity="center_horizontal"
            android:hint="@string/user_name"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textIsSelectable="false"
            android:textColorHint="@color/colorLightGray"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_signup_email"
            android:layout_gravity="center_horizontal"
            android:hint="@string/user_email"
            android:layout_below="@+id/editText_signup_name"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/colorLightGray"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_signup_password"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:hint="@string/user_password"
            android:layout_below="@+id/editText_signup_email"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/colorLightGray"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_signup_password_check"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:hint="@string/user_password_check"
            android:layout_below="@+id/editText_signup_password"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/colorLightGray"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_user_info"
            android:id="@+id/btn_input_complete"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>

    </RelativeLayout>

</LinearLayout>
