<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/layout_tab_board">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_board_all_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/image_tab_board"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잡담톡"
        android:id="@+id/text_tab_board"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image_tab_board"
        android:layout_toEndOf="@+id/image_tab_board"
        android:textColor="@drawable/selector_text_color_tab"/>


</RelativeLayout>