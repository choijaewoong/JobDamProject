<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_height"
                android:background="#bcbcbc">

    <ImageView
        android:id="@+id/image_job_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@android:mipmap/sym_def_app_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/text_job_dday"
        android:layout_toRightOf="@+id/image_job_logo"
        android:layout_toEndOf="@+id/image_job_logo">

        <TextView
            android:id="@+id/text_corp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_job_title"
            android:layout_toEndOf="@+id/image_job_logo"
            android:layout_toRightOf="@+id/image_job_logo"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Corporation"/>

        <TextView
            android:id="@+id/text_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/image_job_logo"
            android:layout_toRightOf="@+id/image_job_logo"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Job Title"/>

        <TextView
            android:id="@+id/text_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_job_title"
            android:layout_toEndOf="@+id/image_job_logo"
            android:layout_toRightOf="@+id/image_job_logo"
            android:text="Period"/>
    </LinearLayout>


    <TextView
        android:id="@+id/text_job_dday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/image_job_logo"
        android:text="d-day"/>

    <ImageView
        android:id="@+id/image_scrap"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/image_job_logo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#6bdbc4"/>

</RelativeLayout>