<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/default_dimen"
                android:paddingRight="@dimen/job_container_right_padding"
                android:paddingBottom="@dimen/job_item_vertical_gap">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/image_job_container"
        android:paddingLeft="@dimen/default_small_dimen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="2.5dp">
        <!--android:background="@drawable/border"-->

    <ImageView
        android:id="@+id/image_job_logo"
        android:layout_width="@dimen/corp_logo_size"
        android:layout_height="@dimen/corp_logo_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@android:mipmap/sym_def_app_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:id="@+id/linearLayout7"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image_job_logo"
        android:layout_toEndOf="@+id/image_job_logo"
        android:layout_marginRight="48dp">

        <TextView
            android:id="@+id/text_corp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_job_title"
            android:layout_toEndOf="@+id/image_job_logo"
            android:layout_toRightOf="@+id/image_job_logo"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Corporation"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_default"/>

        <TextView
            android:id="@+id/text_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/image_job_logo"
            android:layout_toRightOf="@+id/image_job_logo"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Job Title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_default"/>

        <TextView
            android:id="@+id/text_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_job_title"
            android:layout_toEndOf="@+id/image_job_logo"
            android:layout_toRightOf="@+id/image_job_logo"
            android:text="Period"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_min"/>
    </LinearLayout>


        <TextView
            android:id="@+id/text_show_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="항목보기"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_min"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_show_question_list"
            android:gravity="center"
            android:paddingLeft="@dimen/border_horizontal_padding"
            android:paddingRight="@dimen/border_horizontal_padding"
            android:paddingTop="@dimen/border_vertical_padding"
            android:paddingBottom="@dimen/border_vertical_padding"
            android:layout_margin="@dimen/default_small_dimen"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_job_dday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="d-day"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size_min"
        android:background="@drawable/image_dday_box_default"
        android:layout_gravity="right"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/default_small_dimen"/>

</RelativeLayout>