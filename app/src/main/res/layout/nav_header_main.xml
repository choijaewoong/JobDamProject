<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
             android:gravity="bottom"
              android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:layout_gravity="center_vertical|left"
        android:background="@color/colorBackground">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="@dimen/nav_header_profile_size"
            android:layout_height="@dimen/nav_header_profile_size"
            android:layout_marginTop="@dimen/nav_header_profile_top_margin"
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choi jaewoong"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/text_user_name"
            android:layout_gravity="center"
            android:layout_below="@+id/image_profile"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/font_semi_large"
            android:layout_margin="@dimen/default_dimen" />

        <TextView
            android:id="@+id/text_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jwchoi0129@gmail.com"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_below="@+id/text_user_name"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/font_size_default"/>

        <ImageView
            android:layout_width="@dimen/nav_header_image_button"
            android:layout_height="@dimen/nav_header_image_button"
            android:id="@+id/btn_name_modify"
            android:background="#000000"
            android:layout_alignBottom="@+id/text_user_name"
            android:layout_toRightOf="@+id/text_user_name"
            android:layout_toEndOf="@+id/text_user_name"
            android:layout_marginLeft="@dimen/default_dimen" />
        
        <ImageView
            android:layout_width="@dimen/nav_header_image_button"
            android:layout_height="@dimen/nav_header_image_button"
            android:layout_margin="@dimen/default_double_dimen"
            android:id="@+id/btn_setting"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#000000" />
    </RelativeLayout>
</FrameLayout>
