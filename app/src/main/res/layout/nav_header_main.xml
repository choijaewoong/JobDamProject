<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_header_height"
              android:background="@drawable/side_nav_bar"
              android:gravity="bottom"
              android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|left">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/nav_haader_profile_size"
            android:layout_height="@dimen/nav_haader_profile_size"
            android:layout_marginTop="@dimen/nav_header_profile_top_margin"
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choi jaewoong"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_margin="@dimen/default_margin" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jwchoi0129@gmail.com"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="@dimen/nav_header_image_button"
            android:layout_height="@dimen/nav_header_image_button"
            android:id="@+id/imageView4"
            android:background="#000000"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_marginLeft="@dimen/default_margin" />

        <ImageView
            android:layout_width="@dimen/nav_header_image_button"
            android:layout_height="@dimen/nav_header_image_button"
            android:layout_margin="@dimen/default_double_margin"
            android:id="@+id/imageView5"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#000000" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_gravity="left|bottom" />

</FrameLayout>
