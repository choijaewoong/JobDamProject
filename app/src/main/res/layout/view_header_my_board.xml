<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
                android:paddingTop="@dimen/default_small_dimen"
                android:paddingLeft="@dimen/default_dimen"
                android:paddingRight="@dimen/default_large_dimen"
                android:paddingBottom="@dimen/default_small_dimen">

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="@dimen/my_board_profile_image_size"
        android:layout_height="@dimen/my_board_profile_image_size"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:src="@drawable/m_image_icon"
        android:padding="@dimen/default_small_dimen"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image_profile"
        android:layout_toEndOf="@+id/image_profile"
        android:id="@+id/relativeLayout8"
        android:layout_marginLeft="@dimen/default_small_dimen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&quot; JobDam이 당신을 응원합니다! &quot;"
            android:id="@+id/text_my_board_message"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/default_small_dimen"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total 0"
            android:id="@+id/text_my_board_total"
            android:layout_below="@+id/text_my_board_message"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:background="@drawable/background_my_board_total"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/default_small_dimen"
            android:paddingRight="@dimen/default_small_dimen"/>

    </RelativeLayout>

</RelativeLayout>